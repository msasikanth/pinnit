    <LinearLayout
      android:id="@+id/sourceCodeButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/about_item_ripple"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingStart="0dp"
      android:paddingEnd="16dp">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_pinnit_source_code"
        app:tint="@color/about_item" />

      <com.google.android.material.textview.MaterialTextView
        style="@style/TextStyle.Pinnit.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/source_code"
        android:textColor="@color/about_item" />

    </LinearLayout>

    <ImageView
      android:id="@+id/dividerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/divider"
      android:contentDescription="@null"
      android:visibility="gone"
      tools:visibility="visible" />

    <LinearLayout
      android:id="@+id/oemWarningButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/about_item_ripple"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingStart="0dp"
      android:paddingEnd="16dp"
      android:visibility="gone"
      tools:visibility="visible">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_pinnit_warning"
        app:tint="@color/about_item" />

      <com.google.android.material.textview.MaterialTextView
        style="@style/TextStyle.Pinnit.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/warning_about_oem"
        android:textColor="@color/about_item" />


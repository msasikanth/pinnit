<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="dev.sasikanth.pinnit.MainViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutFullscreen="@{true}"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            app:liftOnScroll="true">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetEnd="16dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:paddingTopSystemWindowInsets="@{true}">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/app_bar_label"
                    style="@style/TextStyle.Pinnit.Headline6"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center"
                    tools:text="@string/history" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:navGraph="@navigation/nav_graph" />

        <dev.sasikanth.pinnit.shared.widget.PinnitBottomBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:onOptionsClick="@{() -> mainViewModel.showOptionsMenu()}"
            app:onPageActionClick="@{() -> mainViewModel.notifAction()}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

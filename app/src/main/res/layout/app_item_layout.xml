<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="appItem"
      type="dev.sasikanth.pinnit.data.AppItem" />

    <variable
      name="appItemListener"
      type="dev.sasikanth.pinnit.pages.apps.AppItemListener" />
  </data>

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/app_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:onClick="@{() -> appItemListener.click(appItem)}"
    app:cardBackgroundColor="@color/app_item_card"
    app:cardCornerRadius="@dimen/shape_theming_radius"
    app:cardElevation="0dp"
    app:selected="@{appItem.selected}"
    app:strokeColor="?attr/colorDivider"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="24dp"
      android:paddingBottom="24dp">

      <ImageView
        android:id="@+id/app_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@null"
        android:src="@{appItem.icon}"
        app:layout_constraintBottom_toTopOf="@id/app_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="?attr/colorSecondary" />

      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_label"
        style="@style/TextStyle.Pinnit.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@{appItem.appName}"
        android:textAlignment="center"
        android:textColor="@color/app_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_icon"
        app:selected="@{appItem.selected}"
        tools:text="@string/app_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.google.android.material.card.MaterialCardView>
</layout>
